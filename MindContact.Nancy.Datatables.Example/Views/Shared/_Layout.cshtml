	<script type="text/javascript" language="javascript" src="/Content/js/plugins/datatables/dataTables.tableTools.js"></script>
	<script type="text/javascript" language="javascript" src="/Content/js/plugins/datatables/dataTables.bootstrap.js"></script>
</body>
